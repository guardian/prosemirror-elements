{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es5",
      "lib": ["es2018", "dom"],
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "./",
      "strictNullChecks": true,
      "noImplicitAny": true,
      "jsxFactory": "h",
      "allowSyntheticDefaultImports": true,
      "noEmit": true
    },
    "exclude": [
      "node_modules",
      "dist",
      "scripts"
    ]
  }